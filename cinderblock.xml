<?xml version="1.0" encoding="UTF-8" ?>
<cinder>

	<block
		name="QTimeline"
		id="org.nocte.qtimeline"
		author="Andrea Cuius"
		license="GPL, Commercial"
		summary="A timeline for Cinder."
		version="0.1"
		>

		<sourcePattern>src/*.cpp</sourcePattern>
		<headerPattern>src/*.h</headerPattern>
		
		<includePath>src</includePath>
		
		<platform os="macosx">
			<dynamicLibrary>lib/macosx/libbass.dylib</dynamicLibrary>
			<buildCopy>lib/macosx/libbass.dylib</buildCopy>
		</platform>
		
	</block>

	<template>templates/Basic QTimeline/template.xml</template>

</cinder>